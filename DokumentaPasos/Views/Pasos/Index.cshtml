@model IEnumerable<DokumentaPasos.Models.Paso>

@{
    ViewBag.Title = "Index";
}

<h2>Lista pasoša</h2>

<p>
    @Html.ActionLink("Kreiraj novi pasoš", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IzdajePU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Drzava)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipDokumenta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gradjanin.BrojDokumenta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InformacijeOPasosu.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IzgubljenPaso.PrijavaNestanka)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaloletnoLouse.SaglasnostRoditelja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Uplata.ObrzacPutneIsprave)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IzdajePU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drzava)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipDokumenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gradjanin.BrojDokumenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InformacijeOPasosu.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IzgubljenPaso.PrijavaNestanka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaloletnoLouse.SaglasnostRoditelja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uplata.ObrzacPutneIsprave)
            </td>
            <td>
                @Html.ActionLink("Izmeni", "Edit", new { id = item.PasosID }) |
                @Html.ActionLink("Detalji", "Details", new { id = item.PasosID }) |
                @Html.ActionLink("Obriši", "Delete", new { id = item.PasosID })
            </td>
        </tr>
    }

</table>
<div>@Html.ActionLink("Početna strana", "Index", "Home")</div>

  

